{
    "name": "app-api",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "build": "PNP_DEBUG_LEVEL=0 yarn pnpify tsc -b -v",
        "watch": "PNP_DEBUG_LEVEL=0 yarn pnpify tsc -b -w",
        "debug": "yarn pnpify nodemon -r dotenv/config -r source-map-support/register --inspect ./dist/main.js",
        "start:dev": "yarn pnpify nodemon -r dotenv/config -r source-map-support/register ./dist/main.js",
        "start:debug": "yarn pnpify nest start --debug --watch",
        "start:prod": "yarn node ./dist/main.js",
        "clean": "yarn pnpify tsc -b --clean",
        "trace": "yarn pnpify tsc --traceResolution"
    },
    "dependencies": {
        "@app/auth": "workspace:*",
        "@app/cache": "workspace:*",
        "@app/db": "workspace:*",
        "@app/logging": "workspace:*",
        "@nestjs/common": "workspace:*",
        "@nestjs/core": "workspace:*",
        "@nestjs/platform-express": "workspace:*",
        "@nestjs/swagger": "^4.7.12",
        "@types/multer": "^1.4.5",
        "class-transformer": "^0.3.2",
        "class-validator": "^0.13.1",
        "envsafe": "^2.0.2",
        "express": "^4.17.1",
        "express-rate-limit": "^5.2.3",
        "helmet": "^4.4.1",
        "mongodb": "*",
        "morgan": "^1.10.0",
        "multer": "^1.4.2",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^6.5.4",
        "swagger-ui-express": "^4.1.6"
    },
    "devDependencies": {
        "@nestjs/cli": "^7.0.0",
        "@nestjs/schematics": "^7.0.0",
        "@nestjs/testing": "^7.0.0",
        "@types/express": "^4.17.11",
        "@types/express-rate-limit": "^5.1.1",
        "@types/mongodb": "*",
        "@types/morgan": "^1.9.2",
        "@types/node": "^13.9.1",
        "@types/supertest": "^2.0.8",
        "@yarnpkg/pnpify": "*",
        "dotenv": "^8.2.0",
        "nodemon": "^2.0.6",
        "source-map-support": "^0.5.19",
        "supertest": "^4.0.2",
        "ts-loader": "^6.2.1",
        "ts-node": "9.0.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "*"
    },
    "nodemonConfig": {
        "ignore": [
            "src/*",
            "docs/*"
        ],
        "delay": 2500
    }
}
